#:kivy 2.0.0

############################################################################################################
#                                                                                                          #
#                                         ДОБАВИТЬ ТЕКСТ                                                   #
#                                                                                                          #
############################################################################################################
<AddTextScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.8, 0.8
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        ###############################################################
        #                    ВВЕДИТЕ НОВЫЙ ТЕКСТ                      #
        ###############################################################
        Label:
            text: 'Введите новый текст'
            size_hint: 1, 0.1
            font_size: 30
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                    ПОЛЕ ДЛЯ ВВОДА ТЕКСТА                    #
        ###############################################################
        TextInput:
            id: text_input
            size_hint: 1, 0.7
            font_size: 30
            multiline: True
            readonly: False
            text: ''
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                    КНОПКА ДОБАВИТЬ                          #
        ###############################################################
        Button:
            text: 'Добавить'
            size_hint: 1, 0.2
            font_size: 30
            on_press: root.add_text()
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                    ГЛАВНОЕ МЕНЮ                             #
        ###############################################################
        Button:
            text: 'Главное меню'
            size_hint: 1, 0.2
            font_size: 30
            on_press: root.manager.current = 'start_screen'
            font_name: 'RobotoMono-Regular.ttf'
