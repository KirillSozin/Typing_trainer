#:kivy 2.0.0

############################################################################################################
#                                                                                                          #
#                                             СТАТИСТИКА                                                   #
#                                                                                                          #
############################################################################################################
<StatisticsScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.8, 0.8
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        ###############################################################
        #                        ВАША СТАТИСТИКА                      #
        ###############################################################
        Label:
            text: 'Ваша статистика'
            font_size: 30
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                        ВСЕГО СЕАНСОВ                        #
        ###############################################################
        Label:
            id: total_sessions
            text: 'Всего сессий: 0'
            font_size: 20
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                          ТОЧНОСТЬ                           #
        ###############################################################
        Label:
            id: accuracy
            text: 'Точность: 0%'
            font_size: 20
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                          СКОРОСТЬ                           #
        ###############################################################
        Label:
            id: speed
            text: 'Скорость: 0 зн/мин'
            font_size: 20
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                     СБРОСИТЬ СТАТИСТИКУ                     #
        ###############################################################
        Button:
            text: 'Сбросить статистику'
            size_hint: 1, 0.2
            font_size: 30
            on_press: root.reset_statistics()
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                    ГЛАВНОЕ МЕНЮ                             #
        ###############################################################
        Button:
            text: 'Главное меню'
            size_hint: 1, 0.2
            font_size: 30
            on_press: root.manager.current = 'start_screen'
            font_name: 'RobotoMono-Regular.ttf'
