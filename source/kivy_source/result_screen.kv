#:kivy 2.0.0

############################################################################################################
#                                                                                                          #
#                                              РЕЗУЛЬТАТ                                                   #
#                                                                                                          #
############################################################################################################
<ResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.8, 0.8
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        ###############################################################
        #                         ВАШ РЕЗУЛЬТАТ                       #
        ###############################################################
        Label:
            text: 'Ваш результат'
            font_size: 30
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                           СКОРОСТЬ                          #
        ###############################################################
        Label:
            id: speed
            text: 'Скорость: ' + str(root.speed) + ' зн/мин'
            font_size: 30
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                           ТОЧНОСТЬ                          #
        ###############################################################
        Label:
            id: accuracy
            text: 'Точность: ' + str(root.accuracy) + ' %'
            font_size: 30
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_name: 'RobotoMono-Regular.ttf'

        ###############################################################
        #                       ГЛАВНОЕ МЕНЮ                          #
        ###############################################################
        Button:
            text: 'Главное меню'
            font_size: 30
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.manager.current = 'start_screen'
            font_name: 'RobotoMono-Regular.ttf'


